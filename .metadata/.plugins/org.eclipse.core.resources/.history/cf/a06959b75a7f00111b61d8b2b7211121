#!/usr/bin/env python
# -*- coding: utf-8 -*-

from unicodedata import normalize

def remover_acentos(txt, codif='utf-8'):

    ''' Devolve c�pia de uma str substituindo os caracteres 
        acentuados pelos seus equivalentes n�o acentuados.
    
    ATEN��O: carateres gr�ficos n�o ASCII e n�o alfa-num�ricos,
    tais como bullets, travess�es, aspas assim�tricas, etc. 
    s�o simplesmente removidos!
    
    >>> remover_acentos('[ACENTUA��O] �: �����! ����? ��&#297;��, �����; ��&#361;��.')
    '[ACENTUACAO] c: aaaaa! eeee? iiiii, ooooo; uuuuu.'
    
    '''
    return normalize('NFKD', txt.decode(codif)).encode('ASCII','ignore')
    
if __name__ == '__main__':
    print remover_acentos('[ACENTUAÇÃO] ç: áàãâä! éèêë? íì&#297;îï, óòõôö; úù&#361;ûü.')